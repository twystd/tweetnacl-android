<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

 <item android:id="@android:id/background">
  <shape>
   <corners android:radius="5dip" />
   <gradient android:startColor="#40436eb4"
             android:centerColor="#40436eb4"
             android:centerY="0.75"
             android:endColor="#40436eb4"
             android:angle="270" />
 </shape>
 </item>

 <item android:id="@android:id/secondaryProgress">
  <clip>
   <shape>
    <corners android:radius="5dip" />
    <gradient android:startColor="#ff436eb4"
              android:centerColor="#ff436eb4"
              android:centerY="0.75"
              android:endColor="#ff436eb4"
              android:angle="270" />
   </shape>
  </clip>
 </item>

 <item android:id="@android:id/progress">
  <clip>
   <shape>
    <corners android:radius="5dip" />
     <gradient android:startColor="#ff436eb4"
               android:endColor="#ff436eb4"
               android:angle="270" />
   </shape>
  </clip>
 </item>

</layer-list>